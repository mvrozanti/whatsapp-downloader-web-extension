{
  "manifest_version": 2,
  "name": "WhatsApp-Downloader",
  "version": "0.0",
  "homepage_url": "https://github.com/mvrozanti/whatsapp-downloader-extension",
  "background":{ 
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
      "default_title": "WhatsApp-Downloader",
      "default_icon": {
        "640": "icon.png"
      }
  },
  "permissions": [
      "storage",
      "downloads",
      "activeTab",
      "<all_urls>"
  ]
}
